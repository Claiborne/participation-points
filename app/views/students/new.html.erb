<h1>Add a new student</h1>

<%= form_for(@student) do |f| %>

    <div class='field'>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <br />
    <div class='field'>
      <%= f.label :period %><br />
      <% %w(1 2 3 4 YB).each do |n| %>
          <span class='radio'><%= n.to_s %><%= f.radio_button(:period, n) %></span>
      <% end %>
    </div>
    <br />
    <div class='actions'>
      <%= f.submit 'Add' %>
    </div>

<% end %>